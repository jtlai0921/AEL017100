Sub lsvType_ItemClick (Position As Int, Value As Object)
    ' 取得輸入的外幣金額
    Dim amount As Double = edtAmount.Text 
    ' 計算和顯示兌換的金額
    lblOutput.Text = "兌換成新台幣的金額: " & (amount * Value)
End Sub