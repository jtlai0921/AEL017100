Sub Activity_Create(FirstTime As Boolean)
    Activity.LoadLayout("Main")
    Activity.Title = "匯率轉換程式II"
    edtAmount.Text = "1000"
    ' 新增ListView的項目
    lsvType.AddSingleLine2("美金", 29.9)
    lsvType.AddSingleLine2("日元", 0.2949)
    lsvType.AddSingleLine2("人民幣", 4.861)
End Sub

